{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"max-len": "off",
		"no-unused-vars": "off",
		"no-mixed-spaces-and-tabs": "off",
		"no-console": "off",
		"import/extensions": "off"
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".ts"]
			}
		}
	}
}
